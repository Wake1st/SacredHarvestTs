{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "module": "ES6",
    "target": "ES6",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "build"
  },
  "include": ["src/**/*", "src/**/*d.mts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
